<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <style name="CustomActionBarTheme" parent="android:Theme.Holo.Light" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text_color</item>
    </style>
    
    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/menu_dropdown_panel_eltabview</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <!--  tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>
    
    <!-- ActionBar tab text -->
    <style name="MyActionBarTabText" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>   

</resources>
